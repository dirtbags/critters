hop!
get-direction north <> { right! } if
north look dup wall = us = | {
    wait!

    north look wall = {
        get-direction west <> { left! } if
    } if

    east look empty = {
        hop set-action!
        get-direction east <> { right! } if
    } if

    east look us = {
        get-direction west <> { left! } if
    } if

    west look wall = {
        get-direction south <> { left! } if
    } if
} if

get-direction look them = { infect! } if
